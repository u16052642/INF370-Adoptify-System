@model AdoptifySystem.Donation_Type

@{
    ViewBag.Title = "AddDonationType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Donation Type</h2>
@using (Html.BeginForm()) 
{   
    <div class="form-horizontal">
        <h4>Add Donation Type</h4>
        <hr />
        <div class="form-group">
            <label>Donation Type Name</label>
            <div class="col-md-10">
            <input type="text" class="form-control" id="DonationTypename" name="Donation_Type_Name" placeholder="Donation Type Name">  
            </div>
        </div>

        <div class="form-group">
            <label>Donation Type Description</label>
           <div class="col-md-10">
               <textarea type="text" class="form-control" id="DonationTypeDescription" name="Donation_Type_Description" placeholder="Donation Type Description"></textarea>
           </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" name="button" class="btn btn-warning">Cancel</button>
                <button type="submit" name="button" class=" btn btn-success float-right">Save</button>
            </div>
        </div>
    </div>
}
