@model List<AdoptifySystem.Donation_Type>
@{
    ViewBag.Title = "SearchDonationType";
}

<h2>Search Donation Type</h2>
@using (Html.BeginForm())
{

}
@if (Model !=null)
{
    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Donation Type Name</th>
                <th scope="col">Donation Description</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th scope="row">@item.Donation_Type_ID</th>
                <td>@item.Donation_Type_Name</td>
                <td>@item.Donation_Type_Description</td>
                <td>@Html.ActionLink("Edit", "MaintainDonationType", new { id = item.Donation_Type_ID })</td>
            </tr>
            }
        </tbody>
    </table>



}
else
{
    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
                <th scope="col">Handle</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Mark</td>
                <td>Otto</td>
                <td>mdo</td>
                <td>@Html.ActionLink("Add Donation", "AddDonationType")</td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>Jacob</td>
                <td>Thornton</td>
                <td>fat</td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td>Larry</td>
                <td>the Bird</td>
                <td>witter</td>
            </tr>
        </tbody>
    </table>
}
